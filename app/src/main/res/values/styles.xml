<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SignUpEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColorHint">@color/food_deuk_text_d</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SignUpCompleteButtonCornerRadius" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">16dp</item>

        <!-- 머티리얼 디자인 버튼 기본 마진 제거(레이아웃 <-> 컴포넌트) -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="SignUpRedundancyButtonRadius" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">5dp</item>

        <!-- 머티리얼 디자인 버튼 기본 마진 제거(레이아웃 <-> 컴포넌트) -->
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="UserTypeSelectButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="cornerRadius">18dp</item>

        <!-- 머티리얼 디자인 버튼 클릭 시 위로 떠오르는 애니메이션 제거 -->
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>