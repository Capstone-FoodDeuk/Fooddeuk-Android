<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".storeSetting.StoreSettingActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/tv_check_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="가게 설정"
            android:textColor="@color/food_deuk_text_a"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="85dp"
            android:text="가게 이름"
            android:textColor="@color/food_deuk_text_a"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="115dp"
            app:boxBackgroundColor="@color/food_deuk_box_light_gray"
            app:boxStrokeColor="@color/food_deuk_main_color"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="상호명을 입력해주세요."
                android:textSize="12sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="200dp"
            android:text="카테고리 설정"
            android:textColor="@color/food_deuk_text_a"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="230dp"
            app:cardBackgroundColor="@color/food_deuk_box_light_gray"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_category_tako"
                    style="@style/OnSaveButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:backgroundTint="@color/food_deuk_box_light_gray"
                    android:drawableTop="@drawable/ic_category_tako_small"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="7dp"
                    android:text="타코야끼"
                    android:textColor="@color/food_deuk_text_b"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_category_gunbam"
                    style="@style/OnSaveButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="7dp"
                    android:backgroundTint="@color/food_deuk_box_light_gray"
                    android:drawableTop="@drawable/ic_category_gunbam_small"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="7dp"
                    android:text="군밤"
                    android:textColor="@color/food_deuk_text_b"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_category_goguma"
                    style="@style/OnSaveButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/food_deuk_box_light_gray"
                    android:drawableTop="@drawable/ic_category_goguma_small"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="7dp"
                    android:text="군고구마"
                    android:textColor="@color/food_deuk_text_b"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_category_apple"
                    style="@style/OnSaveButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/food_deuk_box_light_gray"
                    android:drawableTop="@drawable/ic_category_apple_small"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="7dp"
                    android:text="과일"
                    android:textColor="@color/food_deuk_text_b"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btn_category_bungeo"
                    style="@style/OnSaveButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/food_deuk_box_light_gray"
                    android:drawableTop="@drawable/ic_category_bungeo_small"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="7dp"
                    android:text="붕어빵"
                    android:textColor="@color/food_deuk_text_b"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btn_category_sundae"
                    style="@style/OnSaveButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="@color/food_deuk_box_light_gray"
                    android:drawableTop="@drawable/ic_category_sundae_small"
                    android:gravity="bottom|center_horizontal"
                    android:paddingTop="7dp"
                    android:text="순대"
                    android:textColor="@color/food_deuk_text_b"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="430dp"
            android:text="사업자등록번호"
            android:textColor="@color/food_deuk_text_a"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="462dp"
            app:boxBackgroundColor="@color/food_deuk_box_light_gray"
            app:boxStrokeColor="@color/food_deuk_main_color"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="사업자등록번호를 입력해주세요."
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_certification"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="70dp"
            android:backgroundTint="@color/food_deuk_box_light_gray"
            android:outlineProvider="none"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="인증하기"
            android:textColor="@color/food_deuk_text_d"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/food_deuk_text_d"
            app:strokeWidth="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="550dp"
            android:text="가게 설명"
            android:textColor="@color/food_deuk_text_a"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="582dp"
            app:boxBackgroundColor="@color/food_deuk_box_light_gray"
            app:boxStrokeColor="@color/food_deuk_main_color"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="가게에 대해 설명해주세요."
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="710dp"
            android:text="결제 수단"
            android:textColor="@color/food_deuk_text_a"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="735dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_1"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginRight="7dp"
                android:clickable="true"
                android:text="현금"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:chipBackgroundColor="@color/selector_chip_payment"
                app:rippleColor="@color/food_deuk_main_color" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginRight="7dp"
                android:clickable="true"
                android:text="카드"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:chipBackgroundColor="@color/selector_chip_payment"
                app:rippleColor="@color/food_deuk_main_color" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:text="계좌이체"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:chipBackgroundColor="@color/selector_chip_payment"
                app:rippleColor="@color/food_deuk_main_color" />

        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/btn_setting_ok"
            style="@style/OnSaveButtonStyle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="830dp"
            android:backgroundTint="@color/food_deuk_text_d"
            android:text="설정 완료"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>