<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_business_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="오늘의 영업정보"
        android:textSize="16sp"
        android:textColor="@color/food_deuk_text_a"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="해당 정보는 내일 변동될 수 있습니다."
        android:textSize="13sp"
        android:textColor="@color/food_deuk_text_c"
        app:layout_constraintBottom_toBottomOf="@+id/tv_business_info_title"
        app:layout_constraintStart_toEndOf="@+id/tv_business_info_title"/>

    <View
        android:id="@+id/v_bar"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:background="@color/food_deuk_text_d"
        app:layout_constraintTop_toBottomOf="@+id/tv_business_info_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_business_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="21dp"
        android:text="영업 시간"
        android:textSize="16sp"
        android:textColor="@color/food_deuk_text_a"
        app:layout_constraintTop_toBottomOf="@+id/v_bar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_business_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="14:00 - 21:00"
        android:textSize="16sp"
        android:textColor="@color/food_deuk_text_a"
        app:layout_constraintTop_toTopOf="@+id/tv_business_time_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_business_time_title"
        app:layout_constraintEnd_toEndOf="parent"
        tool:text="14:00 - 21:00"/>

    <TextView
        android:id="@+id/tv_business_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="6dp"
        android:text="영업 장소"
        android:textSize="16sp"
        android:textColor="@color/food_deuk_text_a"
        app:layout_constraintTop_toBottomOf="@+id/tv_business_time_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_business_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="서울시 노원구 하계동 000-0"
        android:textSize="16sp"
        android:textColor="@color/food_deuk_text_a"
        app:layout_constraintTop_toTopOf="@+id/tv_business_location_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_business_location_title"
        app:layout_constraintEnd_toEndOf="parent"
        tool:text="서울시 노원구 하계동 000-0"/>

</androidx.constraintlayout.widget.ConstraintLayout>