<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_menu_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/food_deuk_text_a"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tool:text="타코야끼 5개"/>

    <View
        android:id="@+id/v_line_dotted"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:background="@color/food_deuk_text_d"
        app:layout_constraintStart_toEndOf="@+id/tv_menu_detail"
        app:layout_constraintTop_toTopOf="@+id/tv_menu_detail"
        app:layout_constraintBottom_toBottomOf="@+id/tv_menu_detail"
        app:layout_constraintEnd_toStartOf="@+id/tv_menu_price"/>

    <TextView
        android:id="@+id/tv_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000 원"
        android:textSize="16sp"
        android:textColor="@color/food_deuk_text_a"
        app:layout_constraintTop_toTopOf="@+id/tv_menu_detail"
        app:layout_constraintBottom_toBottomOf="@+id/tv_menu_detail"
        app:layout_constraintEnd_toEndOf="parent"
        tool:text="3000 원"/>

</androidx.constraintlayout.widget.ConstraintLayout>